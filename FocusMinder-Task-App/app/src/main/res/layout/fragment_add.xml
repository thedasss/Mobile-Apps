<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#FFFFFF"
        tools:context=".NewNoteFragment">

        <!-- Task Title -->
        <EditText
            android:id="@+id/addNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter task title"
            android:padding="12dp"
            android:textSize="18sp"
            android:background="?android:attr/editTextBackground"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:maxLines="1"
            android:fontFamily="@font/poppins"
            android:textColor="#000"/>

        <!-- Task Description -->
        <EditText
            android:id="@+id/addNoteDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter task description"
            android:gravity="top"
            android:padding="12dp"
            android:textSize="16sp"
            android:minHeight="160dp"
            android:background="?android:attr/editTextBackground"
            android:layout_below="@id/addNoteTitle"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppins"
            android:textColor="#000"/>

        <!-- Date Picker -->
        <RelativeLayout
            android:id="@+id/reminderSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addNoteDesc"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp">

            <ImageView
                android:id="@+id/reminderIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_article_24"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
 />

            <TextView
                android:id="@+id/reminderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Reminder Date"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_toEndOf="@id/reminderIcon"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/pickDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#795757"
                android:text="Pick Date"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <!-- Time Picker -->
        <RelativeLayout
            android:id="@+id/timeSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reminderSection"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp">

            <ImageView
                android:id="@+id/timeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_access_alarm_24"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                 />

            <TextView
                android:id="@+id/reminderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Reminder Time"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_toEndOf="@id/timeIcon"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/pickTimeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Pick Time"
                android:layout_centerVertical="true"
                android:backgroundTint="#795757"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

        <!-- Create Button -->
        <Button
            android:id="@+id/addNoteFab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#795757"
            android:text="Create Task"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>
</layout>
